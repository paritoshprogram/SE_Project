<html>
  <head>
    <link rel="stylesheet" href="/css/manager_profile.css">
    <title>Employees and Tasks</title>
    
  </head>
  <body>
    <h1><b><%= title.profile %>&nbsp;-&nbsp;</b><%= title.username %></h1>
    <div class="container">

      
        <form action = "/api/auth/profile/<%= title.username%>/employees">
      <div class="employee-container" onclick="this.parentNode.submit()">
        <h2>Employees</h2>
      </div>

    </form>

      <form action = "/api/auth/profile/<%= title.username%>/man_tasks">
        <div class="task-container" onclick="this.parentNode.submit()" >
        <h2>Tasks</h2>
    </div>
</form>
      
    </div>

    <div class="top-performers-container">
        <div class="top-head"> <h2>Top Performers</h2></div>
        <div class="top-cont">
        <% for(var i=0; i<topPerformers.length; i++) { %>
         
            <div class="top-per">
            <h3><%= topPerformers[i].first_name%> <%= topPerformers[i].last_name%></h3>
            <p><b>KPI:</b> <%= topPerformers[i].kpi %></p>
        </div>
         
        <% } %>
    </div>
    </div>
      </div>

  </body>
</html>